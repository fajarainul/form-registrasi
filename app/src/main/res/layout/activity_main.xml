<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.digitcreativestudio.registrasi.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:text="Pendaftaran Online"
            style="@style/h1"
            android:layout_marginTop="10dp"/>

        <TextView
            android:text="Data Pribadi"
            style="@style/h2"
            android:layout_marginTop="5dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            style="@style/style_spinner">
        </Spinner>

        <EditText
            android:layout_width="match_parent"
            android:hint="ID Pemohon"
            style="@style/style_edittext"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="Nama Pemohon"
            style="@style/style_edittext"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="Telp Pemohon"
            android:inputType="phone"
            style="@style/style_edittext"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alamat Pemohon"
            style="@style/style_textarea"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            style="@style/style_spinner">
        </Spinner>

        <Spinner
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            style="@style/style_spinner">
        </Spinner>

        <Spinner
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            style="@style/style_spinner">
        </Spinner>

        <Spinner
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            style="@style/style_spinner">
        </Spinner>

        <TextView
            android:text="Data Perusahaan"
            style="@style/h2"
            android:layout_marginTop="5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="NPWP Perusahaan"
            style="@style/style_edittext"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="No Register Perusahaan"
            style="@style/style_edittext"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="Nama Perusahaan"
            style="@style/style_edittext"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alamat Perusahaan"
            style="@style/style_textarea"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="Telp Perusahaan"
            android:inputType="phone"
            style="@style/style_edittext"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            style="@style/style_spinner">
        </Spinner>

        <Spinner
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            style="@style/style_spinner">
        </Spinner>

        <Spinner
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            style="@style/style_spinner">
        </Spinner>

        <Spinner
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            style="@style/style_spinner">
        </Spinner>

        <TextView
            android:text="Data Perizinan"
            style="@style/h2"
            android:layout_marginTop="5dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            style="@style/style_spinner">
        </Spinner>

        <Spinner
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            style="@style/style_spinner">
        </Spinner>

    </LinearLayout>


</ScrollView>
