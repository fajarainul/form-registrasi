<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="h1">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="h2">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="style_edittext">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="style_spinner">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:drawableEnd">@android:drawable/arrow_down_float</item>
    </style>

    <style name="style_textarea">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:minLines">5</item>
        <item name="android:maxLines">5</item>
        <item name="android:singleLine">false</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="style_button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
    </style>

</resources>
